<%-include('./patials/header.ejs')%>
<!DOCTYPE html>
<html lang="" en>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Security-Policy" content="default-src *;img-src * 'self' data: https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' *; style-src  'self' 'unsafe-inline' *">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous">
    </script>
    <style>
        .bold {
            font-weight: bold;
        }

        .F1 {
            font-family: "Times New Roman", Times, serif;
        }

        .font16 {
            font-size: 16px;
        }

        .font30 {
            font-size: 30px;
        }

        .padding-bt {
            padding-bottom: 1.5%;
        }

        .padding-ls {
            padding-inline-start: 4.0%;
        }

        .padding-le {
            padding-inline-end: 4.0%;
        }

        .padding-t {
            padding-top: 1.5%;
        }
        .container {
            max-width: 500px;
            margin: 60px auto;
        }

        .container h1 {
            text-align: center;
            color: white;
        }

        form {
            background-color: white;
        }

        form .input-group {
            margin-bottom: 15px;
        }

        form label {
            display: block;
            margin-bottom: 5px;
        }

        form input {
            padding: 6px 10px;
            width: 100%;
            border: 1px solid #ccc;
        }
        footer {
            text-align: center;
            padding: 3px;
            background-color: rgb(20, 20, 20);
            color: white;
            display: block;
            position: fixed;
            bottom: 0px;
            left: 0px;
            padding: 0px;
            text-align: center;
            width: 100%;
        }
        .textbox {
            display: block;
            position: fixed;
            bottom: 0px;
            left: 200px;
            padding: 150px;
            text-align: center;
            width: 100%;
        }
        .bottonsend {
            display: block;
            position: fixed;
            bottom: 0px;
            left: 500px;
            padding: 150px;
            text-align: center;
            width: 100%;
        }
        .text-center {
            text-align: center;
        }
        h6 {
            text-align: center;
        }
    </style>

<body>

    <div class="text-center F1 font30 padding-bt padding-t bold">Welcome to ChatCSIfElse</div>
        <div class="container-fluid padding-bt ">
            <div class="row">
                <div class="col-xxl-3"></div>
                <div class="col-9 col-lg-18 ">
                   <p><%= response[0].chat_receive%></p>
                            <form class="form-horizontal" class="d-flex" action="/chat/<%=response[0].usersid%>"
                                method="POST">
                                <div class="from-group textbox">
                                    <div class="col-lg-8">
                                        <input name="chat_receive" class="form-control me-2" type="text" placeholder="chat">
                                    </div>
                                </div>

                                <div class="padding-t padding-l bottonsend ">
                                    <button class="btn btn-success" type="submit">send</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
            
        <footer class="bg-dark">
            <p>StudentID : 63050190 <br>
            <p>Name's Sirirat Sanghkao</p>
        </footer>
    </body>
</body>  
</html>